{
  "name": "argv-cmd-lib",
  "version": "2.0.0",
  "description": "Library to parse commands out of a string array like process.argv",
  "main": "lib/index.js",
  "type": "module",
  "types": "lib",
  "files": [
    "lib",
    "!lib/__tests__"
  ],
  "repository": "justin-calleja/argv-cmd-lib",
  "scripts": {
    "build": "run-s clean compile",
    "clean": "rimraf lib",
    "compile": "tsc -p tsconfig.json",
    "dev": "run-s clean _dev",
    "_dev": "npm run compile -- -w",
    "test": "vitest --globals",
    "coverage": "vitest run --coverage",
    "testold": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [
    "argv",
    "args",
    "cmd",
    "command",
    "cmds",
    "commands",
    "parser",
    "parse"
  ],
  "author": "Justin Calleja <calleja.justin@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2",
    "vitest": "^0.12.9"
  }
}
